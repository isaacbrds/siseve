<%= form_with(model: [@event, @talk], local: true) do |form| %>
  
<% if @talk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@talk.errors.count, "error") %> prohibited this talk from being saved:</h2>

      <ul>
        <% @talk.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="fields">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div class="fields">
    <%= form.label :description %>
      <%= form.text_area :description %>
  </div>
  
  <div class="fields">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>
  
  <div class="fields">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>
  
  <div class="fields">
    <%= form.label :user %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: true %>
  </div>
  <div class="actions">
    <%= form.submit 'Criar Palestra' %>
  </div>
<% end %>